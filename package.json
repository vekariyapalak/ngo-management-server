{
  "name": "es6express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production && pnpm run server:prod",
    "server:prod": "node dist/app.js",
    "build": "pnpm exec esbuild app.js --bundle --outfile=dist/app.js --platform=node",
    "clean": "rimraf dist",
    "server": "cross-env DEBUG=app nodemon --es-module-specifier-resolution=node app.js",
    "dev": "cross-env NODE_ENV=development pnpm run server",
    "prod": "run-s clean build",
    "format": "prettier --write \"./**/*.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.1",
    "cross-env": "^10.1.0",
    "debug": "^4.4.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.1",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2"
  }
}
